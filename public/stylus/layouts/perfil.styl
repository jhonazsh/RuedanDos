.perfil-no-photo
	background-color #f1f1f1
	padding 10px 10px 5px 10px
	margin 2em auto
	width 104px
	&>span
		color #dcdcdc
.perfil-no-photo:hover
	cursor pointer
.perfil-no-history
	margin 16em 0
	&>h1
		margin 10px 0
.perfil-photo-content__user-comment
	color #b7b7b7
.perfil-no-photo__user-comment
	font-size 1.8em
	background white
	padding 3px
	border 1px solid
.perfil-aside-actividades
	background-color #fff
	box-shadow 0px 0px 17px 0px rgba(0, 0, 0, 0.28)
	padding 10px 0px
	border-radius 3px

.perfil-aside-actividades-item
	font-size 0.9em
	padding 0 15px
.moto-ini
	color #b51b1b !important

.moto
	font-size 1.4em
.dot
	font-size 1.7em
	color #d6d6d6
.dott
	font-size 1.7em
.perfil-textarea-bio
	resize none
	overflow hidden
.perfil-sub-bio
	margin-top 0.5em
	text-align right
.img-perfil:hover
	cursor pointer
	background-color #d6d6d6
.botones-options
	position absolute
	z-index 50
	top 30px
	height 116px
	color #f1f1f1
	background-color rgba(0, 0, 0, 0.58)
	margin 0 auto
	padding 5px
	right 73px
	display none
.photo-icons:hover
	cursor pointer
	color #e67e22
.edit-class
	border 1px solid #656565
	width 300px
	margin 10px
